# ── PhishGuard Environment Configuration ──────────────────────────────────────
# Copy this file to .env and fill in your values.
# .env is gitignored and never committed.

# ── Server ────────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
RELOAD=false

# ── CORS ──────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed origins. Use * for development only.
# Production example: https://phishguard.example.com,https://api.phishguard.example.com
ALLOWED_ORIGINS=*

# ── Upload Limits ─────────────────────────────────────────────────────────────
MAX_UPLOAD_URLS=500
MAX_UPLOAD_BYTES=5242880

# ── Optional API Keys ─────────────────────────────────────────────────────────
# VT_API_KEY=your_virustotal_api_key_here
